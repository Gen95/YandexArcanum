  "private": true,
  "dependencies": {
    "@types/node": "^12.7.12",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/react-redux": "^7.1.4",
    "@types/react-router-dom": "^5.1.0",
    "react-scripts": "3.2.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "start": "npm-run-all --parallel start:client \"start:server -- {1}\" --",
    "start:client": "react-scripts start",
    "start:server": "npx nodemon ./src/server/app.js --watch server",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "start:selenium": "npx selenium-standalone start",
    "start:test-env": "run-p start start:selenium",
    "test:screenshots": "npx hermione screenshot.hermione.js",
    "test:integration": "npx hermione repotoinner.hermione.js",
    "test:units": "npx mocha src/test/*.test.js",
    "test": "run-p test:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gen95/YandexArcanum.git"
  },
  "bugs": {
    "url": "https://github.com/Gen95/YandexArcanum/issues"
  },
  "homepage": "https://github.com/Gen95/YandexArcanum#readme",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "hermione": "^2.13.0",
    "hermione-custom-commands": "file:hermione-custom-commands",
    "html-reporter": "^5.0.0",
    "mocha": "^6.2.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-pointable": "^1.1.3",
    "react-redux": "^7.1.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "redux": "^4.0.4",
    "selenium-standalone": "^6.16.0",
    "yargs": "^14.0.0"
  }
}
